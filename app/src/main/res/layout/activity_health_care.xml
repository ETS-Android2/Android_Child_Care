<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/fredokaone"
            android:text="Health Care"
            android:textColor="@color/red"
            android:textSize="35sp" /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="It is hard when your baby is sick. Common health problems
in babies include  Fever, Common Cold , Stomach Ach , Gasand Acidity ,
Constipation and Hiccups.
for each disease, we have offered treatments to keep your baby healthy
"
            android:textAllCaps="true"
            android:textColor="@color/TransparentBlack"
            android:textSize="15dp"

            android:textStyle="bold" /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="For each disease, we have offered treatments to keep
your baby healthy :"
            android:textAllCaps="true"
            android:textColor="@color/TransparentBlack"
            android:textSize="15dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnfev"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="320dp"
        android:background="@color/TransparentGrey"
        android:gravity="center"
        android:text="Fever"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btncc"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="370dp"
        android:background="@color/TransparentGrey"
        android:gravity="center"
        android:text="common cold"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnsa"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="420dp"
        android:background="@color/TransparentGrey"
        android:gravity="center"
        android:text="stomach ache"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnga"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="470dp"
        android:background="@color/TransparentGrey"
        android:gravity="center"
        android:text="gas and acidity"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnc"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
